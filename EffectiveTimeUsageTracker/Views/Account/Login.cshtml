@model UserLoginModel;

    <div class="container w-25">
        <h1 class="text-center font-weight-normal">Enter email and password</h1>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form action="@Url.Action("Login", "Account")" method="post">
            <div class="form-group">
                <label for="Email">Email:</label>
                <input class="form-control" name="Email" type="email" />
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input class="form-control" name="Password" type="password" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary float-md-right" name="Submit" type="submit" />
                <a class="btn btn-secondary float-md-left" href="@Url.Action("Create", "Account")">Sign up</a>
            </div>
        </form>
        
    </div>