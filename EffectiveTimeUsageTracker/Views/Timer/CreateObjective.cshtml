<div class="container w-25">
    <h2 class="text-center font-weight-normal">CreateObjective</h2>
    <div asp-validation-summary="All"></div>
    <form action="@Url.Action("CreateObjective", "Timer")" , method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input class="form-control" name="Name" type="text" />
        </div>
        <div class="form-group">
            <label for="WeeklyTimeGoal">WeeklyTimeGoal</label>
            <input class="form-control" name="WeeklyTimeGoal" type="number" />
        </div>
        <div class="form-group">
            <label for="TotalWeeks">Total weeks:</label>
            <input class="form-control" name="TotalWeeks" type="number" />
        </div>
        <div class="form-group">
            <input class="btn btn-primary float-md-right" name="Submit" type="submit" />
        </div>
    </form>
    <a class="btn btn-success float-md-left" href="@Url.Action("Index", "Timer")">Home</a>
</div>